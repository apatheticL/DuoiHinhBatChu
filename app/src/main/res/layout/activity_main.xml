<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_play_background"
        android:scaleType="centerCrop"
/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/header"
        android:layout_height="56dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/avatar" />

            <ImageView
                android:id="@+id/avatarIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/avatar_icon" />

            <TextView
                android:layout_width="32dp"
                android:background="@drawable/heart"
                android:gravity="center"
                android:id="@+id/tv_number_play"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/avatarIcon"
                android:text="3"
                android:layout_marginLeft="-23dp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:layout_height="32dp" />
        </RelativeLayout>
       <RelativeLayout
        android:layout_width="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/coin_icon"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="7dp"
               android:layout_marginRight="24dp"
               android:text="30"
               android:id="@+id/number_money"
               android:textColor="@color/colorWhite"
               android:textSize="14sp" />
       </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:weightSum="8">

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:weightSum="8">

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

            <com.example.duoihinhbatchu.SquareButton
                android:id="@+id/btn_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tile_hover" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:src="@drawable/danhlua"
        android:layout_marginTop="30dp"
        android:id="@+id/im_sound"
        android:layout_below="@+id/header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/im_sound">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="8">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </LinearLayout>
</RelativeLayout>